#
# wm independent hotkeys
#

super + {Return,f, c}
	{kitty, brave, kitty -e lvim}

super + shift + s
  shutter -s

# program launcher
super + d
	rofi -show drun #-theme ~/.config/rofi/themes/dt-dmenu.xorg.rasi
super + shift + e
  ~/.config/rofi/scripts/powermenu.sh dt-dmenu.xorg.rasi
super + w
  ~/.config/rofi/scripts/windows.sh
super + a
  xdg-open $(locate / | rofi -threads 0 -dmenu -i -p "locate:")
super + m
  ~/.config/rofi/scripts/spotify.sh

#
# bspwm hotkeys
#

# quit/restart bspwm
super + shift + r
  ~/.config/bspwm/restart.sh

# close and kill
super + q
	bspc node -c

super + {s, t, space}
	bspc node -t {fullscreen, tiled, floating}

#
# focus/swap
#

super + {_,shift + }{h,j,k,l} 
  bspc node --{focus,swap} {west,south,north,east}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# move/resize
#

# expand a window by moving one of its side outward
super + ctrl + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

XF86AudioRaiseVolume
  pamixer -i 5 #to increase 5%
XF86AudioLowerVolume
  pamixer -d 5 #to decrease 5%
XF86AudioMute
  pamixer --toggle-mute
XF86AudioPause
  playerctl play-pause
XF86AudioNext
  playerctl next
XF86AudioPrev
  playerctl previous
